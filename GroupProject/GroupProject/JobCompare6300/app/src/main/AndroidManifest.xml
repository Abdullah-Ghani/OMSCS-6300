<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.jobcompare6300">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".CurrentJobOfferActivity"></activity>
        <activity android:name=".JobOfferActivity"></activity>
        <activity android:name=".ListJobOffersActivity"></activity>
        <activity android:name=".ComparisonSettingsActivity"></activity>
        <activity android:name=".CompareJobOffersActivity"></activity>
        <activity android:name=".JobComparisonSelectionActivity"></activity>
    </application>

</manifest>