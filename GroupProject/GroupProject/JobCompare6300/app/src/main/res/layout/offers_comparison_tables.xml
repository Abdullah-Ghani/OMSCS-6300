<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="1">

    <TextView
        android:id="@+id/jobComparisonCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Offer Comparison Details:"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="22dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_shadow_start_color" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/jobOffer1ComparisonCard"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        cardView:cardCornerRadius="8dp"
        cardView:cardElevation="20dp"
        cardView:cardBackgroundColor="@color/colorAccent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Highest Ranked Offer:"
                android:textColor="#228B22"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/offer1Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: "
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: "
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1Company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1CostOfLiving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost Of Living: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1CommuteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commute Time: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1YearlySalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly Salary: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1YearlyBonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly Bonus: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1Retirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Retirement: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer1LeaveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Time: "
                android:textSize="15dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_shadow_start_color" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/jobOffer2ComparisonCard"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        cardView:cardCornerRadius="8dp"
        cardView:cardElevation="20dp"
        cardView:cardBackgroundColor="#FFFFE0"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/otherOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Other Offer:"
                android:textColor="#999900"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/offer2Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Score: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: "
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2Company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2CostOfLiving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost Of Living: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2CommuteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commute Time: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2YearlySalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly Salary: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2YearlyBonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly Bonus: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2Retirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Retirement: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/offer2LeaveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Time: "
                android:textSize="15dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>